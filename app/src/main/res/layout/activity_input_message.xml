<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_title" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="8dp">

            <EditText
                android:id="@+id/message_inputMessage"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/input_message_type"
                android:gravity="top"
                android:hint="输入文字......"
                android:padding="3dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/message_inputSize"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:text="(可以输入40个字)"
                android:textColor="@color/text_grat_01"
                android:textSize="15dp" />

        </LinearLayout>

        <include layout="@layout/layout_repeat_title" />

    </RelativeLayout>


</LinearLayout>